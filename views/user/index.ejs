<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/assets/images/logo.png" type="image/icon type">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/assets/css/styles.css" />
    <title>NFT Gamers - website for the real NFT Gamers</title>
  </head>

  <body>
    <div class="animate__fadeInRight animate__animated">
      <main class="container mt-2">
        <!-- Header -->
        <header class="mb-5">
          <!-- Navbar -->
          <nav class="d-none d-lg-block navbar mb-4">
            <div class="btn-group hstack gap-3">
              <a
                href="#"
                class="navbar-brand btn bg-white rounded-5 shadow-sm px-3"
                ><img src="/assets/images/logo.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">NFT Gamer</a
              >
              <a
                href="#top-game"
                class="navbar-brand btn bg-white rounded-5 shadow-sm px-3"
                >Top Game</a
              >
              <a
                href="#airdrop"
                class="navbar-brand btn bg-white rounded-5 shadow-sm px-3"
                >Airdrop</a
              >
              <a
                href="#contact-info"
                class="navbar-brand btn bg-white rounded-5 shadow-sm px-3"
                >Contact Info</a
              >
              <a
                href="/login"
                class="navbar-brand btn bg-white rounded-5 shadow-sm px-3"
                >Login</a
              >
            </div>
          </nav>

          <!-- Head Infomation -->
          <head>
            <div class="row">
              <div class="col-lg-8">
                <!-- Header -->
                <div
                  class="ps-4 mt-3"
                  style="
                    background: linear-gradient(
                      90deg,
                      rgba(31, 24, 142, 1) 0%,
                      rgba(177, 177, 255, 1) 7%,
                      rgba(248, 249, 250, 1) 53%
                    );
                    width: 15rem;
                  "
                >
                  <h5 class="ps-2">BEST OF THE WEEK</h5>
                </div>
                <!-- Main news -->
                <a
                  href=<%= bestNews ? `/news/${bestNews._id}` : '#' %>
                  style="text-decoration: none"
                >
                  <div class="row mt-5">
                    <div class="col-7">
                      <p class="text-info mb-4">
                        News Hot
                        <!-- Check Best News -->
                        <% if(bestNews) { %>
                        <span class="text-dark"
                          >• <%= bestNews.updatedAt.toLocaleDateString()
                          %></span
                        >
                        <% } else { %>
                        <span class="text-dark">• Not Found</span>
                        <% } %>
                      </p>
                      <% if(bestNews) { %>
                      <h1 class="mb-4 link-dark">
                        <%= bestNews.title > 100 ? bestNews.title.substring(0,
                        97) + '...' : bestNews.title %>
                      </h1>
                      <% } else { %>
                      <h1 class="mb-4 link-dark">Not found</h1>
                      <% } %>

                      <div class="hstack gap-0 mt-4">
                        <button
                          class="btn btn-close-white px-4 shadow-lg rounded-5"
                        >
                          Read Article
                        </button>
                        <button
                          class="btn btn-close-white px-2 shadow-lg rounded-5"
                        >
                          ➜
                        </button>
                      </div>
                    </div>
                    <div class="col-5">
                      <img
                        class="w-100 h-100 rounded-5"
                        style="object-fit: cover; transform: skewX(-6deg)"
                        src=<%= bestNews ? bestNews.imageUrl : "assets/images/sample.jpg" %>
                        alt=""
                      />
                    </div>
                  </div>
                </a>

                <!-- More news -->
                <div class="hstack gap-3 mt-5">
                  <% for(let i = Math.max(news.length - 1 - 3, 0);i < news.length; i++) { %>
                  <a class="d-block" href=<%= `/news/${news[i]._id}` %> style="text-decoration: none">
                    <p class="text-info mb-4">
                      News Hot
                      <span class="text-dark"
                        >• <%= news[i]?.updatedAt.toLocaleDateString() %></span
                      >
                    </p>
                    <strong class="mb-4 link-dark">
                      <%= news[i]?.title.length > 100 ?
                      news[i]?.title.substring(0, 97) + '...' : news[i]?.title
                      %>
                    </strong>
                  </a>
                  <% } %>
                </div>
              </div>

              <!-- Hot news -->
              <div class="col-lg-4">
                <div
                  class="shadow-lg p-4 rounded-5 overflow-scroll"
                  style="max-height: 50rem; scrollbar-width: none"
                >
                  <h2 class="mb-3">Hot News</h2>
                  <% if(news[0]) { %>
                  <!-- News 1 -->
                  <a class="d-block position-relative mb-4" href=<%= `/news/${news[0]._id}` %>>
                    <img
                      class="w-100 rounded-4"
                      src=<%= news[0].imageUrl  %>
                      alt="sample.jpg"
                    />
                    <div
                      class="w-100 position-absolute bottom-0 text-bg-light p-2 opacity-50"
                    >
                      <p class="text-info small">
                        News Hot
                        <span class="text-dark"
                          >• <%= news[0]?.updatedAt.toLocaleDateString()
                          %></span
                        >
                      </p>
                      <p>
                        <%= news[0]?.title.length > 10 ?
                        news[0]?.title.substring(0, 7) + '...' : news[0]?.title
                        %>
                      </p>
                    </div>
                  </a>
                  <% } %>

                  <!-- more hot news -->
                  <% for(let i = 1;i < news.length; i++) { %>
                  <a href=<%= `/news/${news[i]._id}` %> class="mb-3" style="text-decoration: none">
                    <div class="row">
                      <div class="col-8">
                        <p class="text-info">
                          News Hot
                          <span class="text-dark"
                            >• <%= news[i]?.updatedAt.toLocaleDateString()
                            %></span
                          >
                        </p>
                        <p class="text-dark">
                          <%= news[i]?.title.length > 10 ?
                          news[i]?.title.substring(0, 7) + '...' :
                          news[i]?.title %>
                        </p>
                      </div>
                      <div class="col-4">
                        <img
                          class="w-100 rounded-5 shadow-sm"
                          style="height: 6rem"
                          src=<%= news[i].imageUrl %>
                          alt="sample.jpg"
                        />
                      </div>
                    </div>
                  </a>
                  <% } %>
                </div>
              </div>
            </div>
          </head>
        </header>

        <section class="mt-5 mb-5" id="top-game">
          <!-- Header -->
          <div
            class="ps-4 mt-3"
            style="
              background: linear-gradient(
                90deg,
                rgba(31, 24, 142, 1) 0%,
                rgba(177, 177, 255, 1) 7%,
                rgba(248, 249, 250, 1) 53%
              );
              width: 15rem;
            "
          >
            <h5 class="ps-2">TOP GAME</h5>
          </div>

          <!-- Show Top Game Table -->
          <div
            class="shadow-lg vstack gap-4 p-4 rounded-4 mt-4 overflow-scroll"
            style="max-height: 50rem; scrollbar-width: none"
          >
            <!-- Game -->
            <% for(let i = 0;i < games.length;i++) { %>
            <a href=<%= `/game/${games[i]._id}` %> style="text-decoration: none"
              ><div class="row mb-2 text-dark">
                <div class="col-1"><p style="font-size: 1.5rem;"><%= i + 1 %></p></div>
                <div class="d-none d-lg-block col-2">
                  <img
                    class="rounded-3"
                    src="<%= games[i].imageUrl %>"
                    style="object-fit: cover; height: 3.5rem; width: 80%;"
                    alt="sample.jpg"
                  />
                </div>
                <div class="col-7">
                  <div class="my-auto">
                    <p class="h3">
                      <%= games[i].title.length > 50 ?
                      games[i].title.substring(0, 47) + '...' : games[i].title
                      %>
                    </p>
                  </div>
                </div>
                <div class="col-2">
                  <p class="text-center" style="font-size: 1.5rem;"><%= games[i].like %> 👍</p>
                </div>
              </div></a
            >
            <% } %>
          </div>
        </section>

        <section class="mt-5 mb-5" id="airdrop">
          <!-- Header -->
          <div
            class="ps-4 mt-3"
            style="
              background: linear-gradient(
                90deg,
                rgba(31, 24, 142, 1) 0%,
                rgba(177, 177, 255, 1) 7%,
                rgba(248, 249, 250, 1) 53%
              );
              width: 15rem;
            "
          >
            <h5 class="ps-2">AIRDROP</h5>
          </div>

          <!-- Show Airdrop Table -->
          <div
            class="shadow-lg vstack gap-4 p-4 rounded-4 mt-4 overflow-scroll"
            style="max-height: 50rem; scrollbar-width: none"
          >
            <!-- Airdrop -->
            <% for(let i = 0; i < airdrops.length; i++) { %>
            <a href=<%= `/airdrop/${airdrops[i]._id}` %> style="text-decoration: none"
              ><div class="row mb-2 text-dark">
                <div class="col-1"><p style="font-size: 1.5rem;">1</p></div>
                <div class="d-none d-lg-block col-2">
                  <img
                    class="rounded-3"
                    src="<%= airdrops[i].imageUrl %>"
                    style="object-fit: cover; height: 3.5rem; width: 80%;"
                    alt="sample.jpg"
                  />
                </div>
                <div class="col-7">
                  <div class="my-auto">
                    <p class="h3">
                      <%= airdrops[i].title.length > 50 ?
                      airdrops[i].title.substring(0,47) + `...` :
                      airdrops[i].title %>
                    </p>
                  </div>
                </div>
                <div class="col-2">
                  <p class="text-center" style="font-size: 1.5rem;">
                    <%= airdrops[i].isDone ? 'Đã trả' : 'Chưa trả' %>
                  </p>
                </div>
              </div></a
            >
            <% } %>
          </div>
        </section>
      </main>

      <div class="big_news">
        <div class="card">
          <div class="lines"></div>
          <div class="imBx">
